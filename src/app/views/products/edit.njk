{% extends "layout.njk" %} {% block head %}
<link rel="stylesheet" href="../../style.css" />
{% endblock head %} {% block content %}

<section class="conatiner form">
  <form method="POST" action="/products?_method=PUT">
    <div class="header">
      <h3>Editar Produto {{ product.id }}</h3>
    </div>

    <div class="fields">
      {% include "products/fields.njk" %}
      <input type="hidden" name="id" value="{{ member.id }}" />
      <button type="submit">Salvar</button>
    </div>

    <button class="button" type="submit">Atualizar</button>
  </form>

  <form id="form-delete" method="POST" action="/members?_method=DELETE">
    <input type="hidden" name="id" value="{{ member.id }}" />
    <button class="button" type="submit">Deletar</button>
  </form>
</section>

{% endblock content %}
